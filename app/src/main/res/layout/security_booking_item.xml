<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/SB_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/cardview_light_background">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SB_bookingCardSnapshot">
            <TextView
                android:id="@+id/SB_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@id/SB_bookingCardSnapshot"
                app:layout_constraintStart_toStartOf="@id/SB_bookingCardSnapshot"
                app:layout_constraintTop_toTopOf="@id/SB_bookingCardSnapshot" />
            <TextView
                android:id="@+id/SB_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="@id/SB_bookingCardSnapshot"
                app:layout_constraintStart_toEndOf="@id/SB_description"
                app:layout_constraintBottom_toBottomOf="@id/SB_bookingCardSnapshot"
                android:textColor="@color/cardview_dark_background"
                android:text="Price"/>
            <TextView
                android:id="@+id/SB_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:layout_constraintTop_toTopOf="@id/SB_bookingCardSnapshot"
                app:layout_constraintStart_toEndOf="@id/SB_price"
                app:layout_constraintBottom_toBottomOf="@id/SB_bookingCardSnapshot"
                android:textColor="@color/cardview_dark_background"
                android:text="Status"/>
            <Button
                android:id="@+id/SB_arrowbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="100dp"
                android:background="@android:drawable/arrow_down_float"
                app:layout_constraintEnd_toEndOf="@id/SB_bookingCardSnapshot"
                app:layout_constraintStart_toEndOf="@+id/SB_status"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/SB_bookingCardSnapshot"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/SB_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testTop"
            >
            <TextView
                android:id="@+id/SB_lblAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Address"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toTopOf="@+id/SB_expand"
                app:layout_constraintStart_toStartOf="@+id/SB_expand"
                app:layout_constraintBottom_toTopOf="@id/SB_street"/>
            <TextView
                android:id="@+id/SB_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Street"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lblAddress"
                app:layout_constraintStart_toStartOf="@+id/SB_expand"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_date"/>

            <TextView
                android:id="@+id/SB_suburb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:text="suburb"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_street"
                app:layout_constraintTop_toBottomOf="@+id/SB_lblAddress" />
            <TextView
                android:id="@+id/SB_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="city"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lblAddress"
                app:layout_constraintStart_toEndOf="@+id/SB_suburb"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_date"/>
            <TextView
                android:id="@+id/SB_lbl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Date:"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_street"
                app:layout_constraintStart_toStartOf="@+id/SB_expand"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_time"/>
            <TextView
                android:id="@+id/SB_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="date"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_street"
                app:layout_constraintStart_toEndOf="@+id/SB_lbl_date"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_time"/>
            <TextView
                android:id="@+id/SB_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="date End"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_street"
                app:layout_constraintStart_toEndOf="@+id/SB_date"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_time"/>
            <TextView
                android:id="@+id/SB_lbl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Start Time: "
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toStartOf="@+id/SB_expand"
                app:layout_constraintBottom_toBottomOf="@id/SB_expand"/>
            <TextView
                android:id="@+id/SB_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="start Time"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_lbl_time"
                app:layout_constraintBottom_toBottomOf="@id/SB_expand"/>
            <TextView
                android:id="@+id/SB_lbl_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="End Time:"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_start_time"
                app:layout_constraintBottom_toBottomOf="@id/SB_expand"/>
            <TextView
                android:id="@+id/SB_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="end time"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_lbl_time_end"
                app:layout_constraintBottom_toBottomOf="@id/SB_expand"/>



        </android.support.constraint.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</android.support.constraint.ConstraintLayout>