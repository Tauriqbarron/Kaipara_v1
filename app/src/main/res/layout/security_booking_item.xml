<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/SB_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        app:cardBackgroundColor="@color/cardview_light_background">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SB_bookingCardSnapshot">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginStart="6dp"
                android:layout_height="60dp"
                app:srcCompat="?attr/dividerVertical"
                android:background="@color/shadow_grey"
                app:layout_constraintStart_toEndOf="@id/SB_day"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/SB_description"/>

            <TextView
                android:id="@+id/SB_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18dp"
                android:shadowColor="@color/shadow_grey"
                android:shadowRadius="1"
                android:shadowDy="3"
                android:shadowDx="3"
                android:layout_marginTop="18dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/SB_day"
                app:layout_constraintTop_toTopOf="@id/SB_bookingCardSnapshot" />
            <TextView
                android:id="@+id/SB_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="Tues"
                android:textSize="15dp"
                android:textColor="@color/SB_day"
                app:layout_constraintTop_toTopOf="@+id/SB_bookingCardSnapshot"
                app:layout_constraintStart_toStartOf="@+id/SB_bookingCardSnapshot"
                />
            <TextView
                android:id="@+id/SB_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="18"
                android:textColor="@color/SB_date"
                android:textSize="30dp"
                app:layout_constraintTop_toBottomOf="@+id/SB_day"
                app:layout_constraintStart_toStartOf="@+id/SB_bookingCardSnapshot" />
            <TextView
                android:id="@+id/SB_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Nov"
                android:textColor="@color/SB_month"
                app:layout_constraintTop_toBottomOf="@+id/SB_date"
                app:layout_constraintStart_toStartOf="@+id/SB_bookingCardSnapshot" />

            <TextView
                android:id="@+id/SB_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toTopOf="@id/SB_bookingCardSnapshot"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/SB_price"
                android:shadowColor="@color/shadow_grey"
                android:shadowRadius="1"
                android:shadowDy="1"
                android:shadowDx="1"
                android:text="Price"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/SB_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="@id/SB_time_end"
                app:layout_constraintStart_toEndOf="@id/SB_time_end"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/rounded"
                android:textColor="@color/shadow_black"
                android:text="UNASSGNED"
                android:textSize="12dp"/>


            <TextView
                android:id="@+id/SB_lblAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_month"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/SB_street"/>
            <TextView
                android:id="@+id/SB_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Street"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lblAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_date"/>

            <TextView
                android:id="@+id/SB_suburb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="suburb"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_street"
                app:layout_constraintTop_toBottomOf="@+id/SB_lblAddress" />
            <TextView
                android:id="@+id/SB_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="city"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lblAddress"
                app:layout_constraintStart_toEndOf="@+id/SB_suburb"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_date"/>
            <TextView
                android:id="@+id/SB_lbl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="End Date:"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_street"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_time"/>

            <TextView
                android:id="@+id/SB_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="date End"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_street"
                app:layout_constraintStart_toEndOf="@+id/SB_lbl_date"
                app:layout_constraintBottom_toTopOf="@id/SB_lbl_time"/>
            <TextView
                android:id="@+id/SB_lbl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Starting at"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/SB_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="start Time"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_lbl_time"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/SB_lbl_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="End Time:"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_start_time"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/SB_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:text="end time"
                android:textColor="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@+id/SB_lbl_date"
                app:layout_constraintStart_toEndOf="@+id/SB_lbl_time_end"
                app:layout_constraintBottom_toBottomOf="parent"/>



        </android.support.constraint.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</android.support.constraint.ConstraintLayout>