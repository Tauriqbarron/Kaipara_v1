<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textSize="20dp"
            android:layout_marginTop="65dp"
            android:background="@drawable/rounded"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/SBFO_lbl_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Type"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2" />

        <TextView
            android:id="@+id/SBFO_type"
            android:lines="2"
            android:singleLine="false"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_lbl_type"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_type"
            android:layout_marginStart="60dp"
            android:text="Type"/>

        <TextView
            android:id="@+id/SBFO_lbl_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Guards"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_type"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2" />
        <TextView
            android:id="@+id/SBFO_lbl_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_number"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2" />
        <TextView
            android:id="@+id/SBFO_description"
            android:lines="2"
            android:singleLine="false"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_lbl_description"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_description"
            android:layout_marginStart="60dp"
            android:text="Desscription"/>

        <TextView
            android:id="@+id/SBFO_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_lbl_number"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_number"
            android:layout_marginStart="60dp"
            android:text="3"/>

        <TextView
            android:id="@+id/SBFO_lbl_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_description"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2" />
        <TextView
            android:id="@+id/SBFO_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_lbl_address"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_address"
            android:layout_marginStart="40dp"
            android:text="Street"/>

        <TextView
            android:id="@+id/SBFO_suburb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_street"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_street"
            android:layout_marginStart="60dp"
            android:text="suburb"/>

        <TextView
            android:id="@+id/SBFO_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/SBFO_street"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toBottomOf="@id/SBFO_street"
            android:text="City"/>

        <TextView
            android:id="@+id/SBFO_postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            app:layout_constraintStart_toEndOf="@id/SBFO_city"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_city"
            android:text="1025"/>
        <TextView
            android:id="@+id/SBFO_lbl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_city"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2" />
        <TextView
            android:id="@+id/SBFO_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_lbl_date"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_date"
            android:layout_marginStart="60dp"
            android:text="10th Novmber 2020"/>
        <TextView
            android:id="@+id/SBFO_lbl_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_date"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2" />
        <TextView
            android:id="@+id/SBFO_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_lbl_start_time"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_start_time"
            android:layout_marginStart="60dp"
            android:text="10:30 pm"/>
        <TextView
            android:id="@+id/SBFO_lbl_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_start_time"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2" />
        <TextView
            android:id="@+id/SBFO_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/SBFO_lbl_end_time"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_end_time"
            android:layout_marginStart="60dp"
            android:text="6:30 am"/>

        <TextView
            android:id="@+id/SBFO_lbl_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subototal"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_end_time"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/SBFO_d1"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_subtotal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/shadow_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_subtotal"
            android:layout_marginEnd="50dp"
            android:text="$180.89"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/SBFO_lbl_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GST"
            android:layout_marginTop="4dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_d1"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_gst"
            android:layout_marginEnd="50dp"
            android:text="15%"
            android:textSize="18dp"/>

        <ImageView
            android:id="@+id/SBFO_d2"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_gst"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/shadow_grey"/>
        <TextView
            android:id="@+id/SBFO_lbl_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_marginTop="4dp"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_d2"
            android:textColor="@color/SB_month"
            android:shadowColor="@color/shadow_grey"
            android:shadowRadius="2"
            android:shadowDy="2"
            android:shadowDx="2"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/shadow_black"
            app:layout_constraintTop_toTopOf="@id/SBFO_lbl_total"
            android:layout_marginEnd="50dp"
            android:text="$220.25"
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/SBFO_d3"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/SBFO_lbl_total"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/shadow_grey"/>
        <Button

            android:id="@+id/SBFO_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textSize="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_started"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/SBFO_d3"/>


    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>
